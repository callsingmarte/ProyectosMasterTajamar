@{
    ViewData["Title"] = "Contáctanos";
}

<div class="container my-5">
    <h1 class="text-danger mb-4 text-center">Contáctanos</h1>

    <p class="lead text-center">
        Estamos aquí para ti. Puedes comunicarte con SANA por correo electrónico, teléfono o a través de nuestras redes sociales.
    </p>

    <div class="row mt-5 g-4">

        <!-- Card Email -->
        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body text-center">
                    <i class="fas fa-envelope fa-2x text-danger mb-3"></i>
                    <h5 class="card-title">Correo electrónico</h5>
                    <p class="card-text">Envíanos un mensaje directo.</p>
                    <a href="mailto:contacto@sana.org" class="btn btn-outline-danger">contacto@sana.org</a>
                </div>
            </div>
        </div>

        <!-- Card Teléfono -->
        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body text-center">
                    <i class="fas fa-phone fa-2x text-danger mb-3"></i>
                    <h5 class="card-title">Teléfono</h5>
                    <p class="card-text">Llámanos si necesitas hablar directamente.</p>
                    <a href="tel:+34900123456" class="btn btn-outline-danger">+34 900 123 456</a>
                </div>
            </div>
        </div>

        <!-- Card Redes Sociales -->
        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body text-center">
                    <i class="fas fa-share-alt fa-2x text-danger mb-3"></i>
                    <h5 class="card-title">Redes Sociales</h5>
                    <p class="card-text">Síguenos para conocer nuestra labor diaria.</p>
                    <div class="d-flex justify-content-center gap-3 fs-4">
                        <a href="https://facebook.com/sanaONG" target="_blank" class="text-danger" title="Facebook">
                            <i class="fab fa-facebook"></i>
                        </a>
                        <a href="https://twitter.com/sanaONG" target="_blank" class="text-danger" title="Twitter">
                            <i class="fab fa-x-twitter"></i>
                        </a>
                        <a href="https://instagram.com/sanaONG" target="_blank" class="text-danger" title="Instagram">
                            <i class="fab fa-instagram"></i>
                        </a>
                        <a href="https://linkedin.com/company/sanaONG" target="_blank" class="text-danger" title="LinkedIn">
                            <i class="fab fa-linkedin"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
