@model Carrito

@if(Model != null)
{
    <div class="card p-4 shadow">
        <div class="card-body">
            @if(Model.ItemsCarrito.Count() > 0 && Model.ItemsCarrito != null)
            {
                @foreach (ItemCarrito item in Model.ItemsCarrito)
                {
                    <div class="overflow-scroll">
                        <div class="row">
                            @if (!string.IsNullOrEmpty(item.MainImageUrl))
                            {
                                <div class="col">
                                    <img src="@item.MainImageUrl" class="img-thumbnail" style="width: 50px" />
                                </div>
                            }
                            <div class="col">
                                <p>@item.Producto.Nombre</p>
                            </div>
                            <div class="col">
                                <p>Cantidad: @item.Cantidad</p>
                                <span class="badge bg-warning">@item.Subtotal</span>
                            </div>
                            <div class="col">
                                <button class="btn btn-danger">Quitar Item</button>
                            </div>
                        </div>
                    </div>
                }
            }
            <hr />
            <div class="row">
                <div class="col">
                    <p>Total: @Model.Total €</p>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <button class="btn btn-danger">Vaciar</button>
            <a asp-action="" class="btn btn-outline-success">Comprar</a>
        </div>
    </div>
}
else
{
    <p>No se ha creado un carrito para el usuario todavia</p>
}