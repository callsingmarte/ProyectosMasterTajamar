<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard - SensorVision</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/PracticaKinesis.styles.css" asp-append-version="true" />
    <style>
        :root {
            --color-bg-gradient: linear-gradient(135deg, #3b0764, #7c3aed, #0ea5e9);
            --color-primary: #7c3aed;
            --color-accent: #0ea5e9;
            --color-warm-accent: #fb7185;
            --color-bg-dark: #1f1f2e;
            --color-text-main: #ffffff;
            --color-text-muted: #d1d5db;
            --color-border-soft: rgba(255, 255, 255, 0.1);
        }

        /* Fondo degradado accesible */
        body {
            background: var(--color-bg-gradient);
            min-height: 100vh;
            color: var(--color-text-main);
            font-family: 'Inter', sans-serif;
            margin: 0;
            padding: 0;
        }

        /* Header fijo */
        header {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1050;
            background: var(--color-bg-dark);
            padding: 15px 0;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.3);
        }

            header h2 {
                color: var(--color-text-main);
                text-align: center;
            }

        /* Barra de navegación fija */
        .sidebar {
            position: fixed;
            top: 50px; /* Justo debajo del header */
            left: 0;
            bottom: 0;
            width: 250px;
            background-color: #2c2c3e; /* Más oscuro y elegante */
            padding-top: 20px;
            z-index: 1;
            box-shadow: 2px 0 10px rgba(0, 0, 0, 0.3);
        }

            .sidebar .nav-link {
                color: var(--color-text-muted);
                padding: 10px 20px;
                display: block;
                transition: color 0.3s ease, background-color 0.3s ease;
            }

                .sidebar .nav-link:hover {
                    color: var(--color-warm-accent);
                    background-color: #3b3b4f;
                }

                .sidebar .nav-link i {
                    margin-right: 8px;
                }

        /* Contenido principal */
        .main-content {
            margin-left: 250px;
            padding-top: 100px;
            padding: 30px;
        }

        /* Footer */
        footer {
            background-color: var(--color-bg-dark);
            color: var(--color-text-main);
            text-align: center;
            padding: 20px 0;
            border-top: 1px solid var(--color-border-soft);
        }

            footer a {
                color: var(--color-warm-accent);
                text-decoration: none;
            }

                footer a:hover {
                    text-decoration: underline;
                }

    </style>
</head>
<body class="d-flex flex-column min-vh-100">

    <!-- Header -->
    <header class="mb-5">
        <div class="container-fluid">
            <h2 class="m-0">SensorVision</h2>
        </div>
    </header>

    <!-- Main layout -->
    <div class="container-fluid d-flex flex-column flex-grow-1">
        <div class="row flex-grow-1">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 sidebar">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-controller="Home" asp-action="Index">
                            <i class="bi bi-house-door"></i> Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-controller="Home" asp-action="Privacy">
                            <i class="bi bi-shield-lock"></i> Privacy
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-controller="Home" asp-action="Dashboard">
                            <i class="bi bi-house-door-fill"></i> Dashboard
                        </a>
                    </li>
                </ul>
            </nav>

            <!-- Main content -->
            <main class="main-content col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4 overflow-auto" style="z-index: 2">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Footer -->
    <footer style="z-index: 2">
        <div class="container">
            &copy; 2025 - SensorVision - <a href="/Home/Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
