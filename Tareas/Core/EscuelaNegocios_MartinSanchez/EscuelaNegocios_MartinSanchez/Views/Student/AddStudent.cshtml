@using EscuelaNegocios_MartinSanchez.Models
@model Student

<h1>Add Student</h1>
<div class="container">
    <div class="row mb-3">
        <div class="col-md-7 offset-3">
            <form asp-action="AddStudent">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="StudentUser"></label>
                    <input asp-for="StudentUser" class="form-control" type="email" />
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-success">Save and Back to Students Index</button>
                </div>
            </form>
        </div>
    </div>
    <a asp-action="Index" class="btn btn-outline-dark">Back</a>
</div>