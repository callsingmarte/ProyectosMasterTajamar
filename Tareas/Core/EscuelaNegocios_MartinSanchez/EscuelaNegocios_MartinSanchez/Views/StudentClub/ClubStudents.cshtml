@using EscuelaNegocios_MartinSanchez.Models
@model List<StudentClub>

<h1>@ViewBag.ClubName Students</h1>
@if(Model.Count() == 0){
    <p>No students in the club yet</p>
}else{
    <table class="table table-bordered">
        <thead class="table-primary">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>User</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var studentClub in Model)
            {
                <tr>
                    <td>@studentClub.Student!.Id</td>
                    <td>@studentClub.Student.Name</td>
                    <td>@studentClub.Student.StudentUser</td>
                </tr>
            }
        </tbody>
    </table>
}
<a asp-action="Index" asp-controller="Club" class="btn btn-outline-dark">Back</a>
