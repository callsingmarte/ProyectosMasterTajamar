@using Ej_EmployeesOneTableApp.Models
@model IEnumerable<Employee>

@{
    ViewData["Title"] = "AllEmployees";
}

<p>
    <a asp-controller="Employee" asp-action="AddEmployee">
        Add a Employee
    </a>
</p>
<h1>All Employees</h1>
@{
    if (Model.Count() < 1)
    {
        <p>No employees in database yet</p>
    }
    else
    {
        <h4>All Employees</h4>
        <table class="table table-striped">
            <tr>
                <th>EmployeeID</th>
                <th>Name</th>
                <th>Hourly Wage</th>
                <th></th>
                <th></th>
            </tr>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.ID</td>
                    <td>@employee.Name</td>
                    <td>@employee.HourlyWage</td>
                    <td>
                        <a class="btn btn-success" asp-action="EditEmployee" asp-route-id="@employee.ID">Edit</a>
                    </td>
                    <td>
                        <a class="btn btn-warning" asp-action="DeleteEmployee" asp-route-id="@employee.ID">Delete</a>
                    </td>
                </tr>
            }
        </table>
    }
}