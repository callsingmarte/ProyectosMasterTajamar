@model Smith_Swimming_School.Models.Coach

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Coach</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id_Coach" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone_Number" class="control-label"></label>
                <input asp-for="Phone_Number" class="form-control" />
                <span asp-validation-for="Phone_Number" class="text-danger"></span>
            </div>
            @if(User.IsInRole("Coach")){
                <div class="form-group">
                    <label asp-for="CoachUser" class="control-label"></label>
                    <input asp-for="CoachUser" class="form-control" readonly/>
                    <span asp-validation-for="CoachUser" class="text-danger"></span>
                </div>
            }else if(User.IsInRole("Administrator")){
                <div class="form-group">
                    <label asp-for="CoachUser" class="control-label"></label>
                    <input asp-for="CoachUser" class="form-control" />
                    <span asp-validation-for="CoachUser" class="text-danger"></span>
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>

<div>
    @if (User.IsInRole("Coach")) {
        <a asp-action="Details" asp-action-id="@Model.Id_Coach">Back Coach Details</a>
        <a asp-action="CoachAdmin" class="btn btn-dark" >Back Coach Panel</a>
    }
    else if (User.IsInRole("Administrator"))
    {
        <a asp-action="Index" class="btn btn-dark">Back to List</a>
    }
</div>

