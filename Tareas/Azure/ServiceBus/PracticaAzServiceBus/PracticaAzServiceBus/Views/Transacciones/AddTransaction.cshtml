@model PracticaAzServiceBus.Models.Transaccion

@{
    ViewData["Title"] = "AddTransaction";
}

<h1>Realizar Transaccion</h1>

<h4>Transaccion</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddTransactionToQueue">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Monto" class="control-label"></label>
                <input asp-for="Monto" class="form-control" />
                <span asp-validation-for="Monto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoTransaccion" class="control-label"></label>
                <select asp-for="TipoTransaccion" asp-items="ViewBag.TiposTransaccion" class="form-control">
                </select>
                <span asp-validation-for="TipoTransaccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CuentaDestino" class="control-label"></label>
                <input asp-for="CuentaDestino" class="form-control" />
                <span asp-validation-for="CuentaDestino" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DetallesAdicionales" class="control-label"></label>
                <input asp-for="DetallesAdicionales" class="form-control" />
                <span asp-validation-for="DetallesAdicionales" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
