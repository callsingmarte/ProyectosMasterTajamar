@using MultiplesTablesCoreApp.ViewModels
@model EnrollmentAddViewModel

<h1>Enrollment Add </h1>
<h4>Course: @Model.Course!.CourseTitle</h4>
<form asp-action="EnrollmentAdd" method="post" class="card p-4 shadow" style="width: 15rem">
    <input type="hidden" asp-for="Course!.CourseId"/>
    <div class="row mb-3">
        <label asp-for="Student!.StudentName" class="col-form-label col-auto"></label>
        <div class="col-auto">
            <select asp-for="Student!.StudentId" asp-items="@Model.StudentList" class="form-select">
                <option value="0">-Choose-</option>
            </select>
        </div>
    </div>
    <div class="row">
        <button type="submit" class="col-auto btn btn-success">Enroll Student</button>
    </div>
</form>
<p><a asp-action="AllCourse" asp-controller="Course" class="btn btn-primary mt-3">Back</a></p>
