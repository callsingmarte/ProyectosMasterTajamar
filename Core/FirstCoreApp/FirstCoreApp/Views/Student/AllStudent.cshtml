@using FirstCoreApp.Models
@model List<Student>

@{
    ViewData["Title"] = "AllStudent";
}

<h1>AllStudent</h1>
<p>
    <a asp-controller="Student" asp-action="AddStudent" class="btn btn-dark">
        Add a new Student
    </a>
</p>
<h1>AllStudent</h1>
@{
    if (Model.Count == 0)
    {
        <p>No student yet.</p>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr class="table-dark">
                    <th>Student ID</th>
                    <th>Student Name</th>
                    <th>GPA</th>
                    <th>Major</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Student student in Model)
                {
                    <tr>
                        <td>@student.ID</td>
                        <td>@student.Name</td>
                        <td>@student.GPA</td>
                        <td>@student.Major?.MajorName</td>
                    </tr>
                }
            </tbody>
        </table>
    }
}